    <form method="POST" action="/">
        <!-- header section -->
        <header class="header-section">
            <h1>SWEET CAKE</h1>
        </header>
        <!-- banner section -->
        <section id="banner" class="section-p1">
            <h1>Check out the delicious cake menu The Best Cake.<br>Freshly Baked and delivered right to your door!</h1>
            <div class="banner-box">
                <h4>Hot promotion of month</h4>
                <h2>Buy1 get1free</h2>
                <span>See monthly promotions here</span>
                <button class="white">Learn More</button>
            </div>
            <div class="banner-box banner-box2">
                <h4 style="color: #fff;">Happy Monday </h4>
                <h2>Discount 10%</h2>
                <span>Wake up your brain on Monday with great promotions</span>
                <button class="white">Learn More</button>
            </div>

        </section>

        <!-- New Arrival section -->
        <section id="product1" class="section-p1"><br><br>
            <h2>New Arrival </h2>
            <p>Delicious cake menu that guarantee deliciousness</p>

            <% Object.values(products).forEach(function(item){%>
                <div class="pro-container">
                    <div class="pro">
                        <a href="/<%= item._id %>">
                    <img src="/img/product/<%= item.image %>" alt="">
                    <div class="des">
                        <span><%= item.category %></span>
                        <h5>
                            <%= item.name %>
                        </h5>
                        <div class="star">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        </div>
                        <h4>$
                            <%= item.price %>
                        </h4>
                    </div>
                    <div class="cart">
                        <a href="#"><i class="fas fa-cart-arrow-down"></i></a></div>
                    </a>
                </div>

                </div>
                <% }) %>
        </section>



        <!-- hot cake section -->
        <section id="product1" class="section-p1"><br><br>
            <h2>Hot Cake</h2>
            <p>Delicious cake menu that guarantee deliciousness</p>
            <% Object.values(products).forEach(function(item){%>
                <div class="pro-container">
                    <div class="pro">
                        <a href="/<%= item._id %>">
                    <img src="/img/product/<%= item.image %>" alt="">
                    <div class="des">
                        <span><%= item.category %></span>
                        <h5>
                            <%= item.name %>
                        </h5>
                        <div class="star">
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                            <i class="fas fa-star"></i>
                        </div>
                        <h4>$
                            <%= item.price %>
                        </h4>
                    </div>
                    <div class="cart">
                        <a href="#"><i class="fas fa-cart-arrow-down"></i></a></div>
                    </a>
                </div>

                </div>
                <% }) %>
        </section>


        <!-- menu section -->
        <section id="product1" class="section-p1"><br><br>
            <h2>Menu Cake</h2>
            <p>choose the desired menu</p>
            <div class="pro-container">
                <div class="pro">
                    <a href="/cupcake">
                        <img src="https://letocaffe.co.uk/uk_uploads/2016/04/tart3-500x500.jpg" alt="">
                        <div class="des">
                            <h5>CUPCAKE</h5>
                        </div>
                    </a>
                </div>
                <div class="pro">
                    <a href="/cake">
                        <img src="https://letocaffe.co.uk/uk_uploads/2016/04/leto-cakes00154-600x600.jpg" alt="">
                        <div class="des">
                            <h5>CAKE</h5>
                        </div>
                    </a>
                </div>
                <div class="pro">
                    <a href="/topping">
                        <img src="https://letocaffe.co.uk/uk_uploads/2016/11/DSC_6864-scaled-600x600.jpg" alt="">
                        <div class="des">
                            <h5>TOPPING</h5>
                        </div>
                    </a>
                </div>
            </div>
        </section>
    </form>
